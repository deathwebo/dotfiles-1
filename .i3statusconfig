general {
    colors = true
    interval = 5
    separator = " | "
    color_good = "#A6E22E"
    color_degraded = "#FD971F"
    color_bad = "#F92672"
}

order += "disk /"
order += "ethernet _first_"
order += "tztime local"
order += "sysdata"

ethernet _first_ {
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
    separator = true
    separator_block_width = 25
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
    separator = true
    separator_block_width = 25
}

disk "/" {
    format = "%avail"
    separator = true
    separator_block_width = 25
    align = "left"
}

sysdata {
    cache_timeout = 10
    mem = "#F92672"
}
